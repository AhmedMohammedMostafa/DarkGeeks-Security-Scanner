# Server Configuration
PORT=5000
NODE_ENV=development

# Security
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Network Monitoring
NETWORK_MONITOR_INTERVAL=60
MAX_PACKETS_PER_CAPTURE=1000

# Vault Configuration
VAULT_ENCRYPTION_KEY=change_this_to_a_secure_random_string

# API Keys
HIBP_API_KEY=your_haveibeenpwned_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# AI Configuration
AI_MODEL=gemini-pro
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000 